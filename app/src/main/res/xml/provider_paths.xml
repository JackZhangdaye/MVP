<?xml version="1.0" encoding="utf-8"?>
    <paths>
        <!-- Context.getFilesDir() + "/path/" -->
        <files-path
            name="my_files"
            path="filesdir/"/>
        <!-- Context.getCacheDir() + "/path/" -->
        <cache-path
            name="my_cache"
            path="cachedir/"/>
        <!-- Context.getExternalFilesDir(null) + "/path/" -->
        <external-files-path
            name="external-files-path"
            path="externalfilesdir/"/>
        <!-- Context.getExternalCacheDir() + "/path/" 表示应用程序内部存储目录下的 cache/ 目录 -->
        <external-cache-path
            name="upApk"
            path="apk/" />
        <!-- Environment.getExternalStorageDirectory() + "/path/" -->
        <external-path
            name="my_external_path"
            path="externalstoragedirectory/"/>
        <!-- Environment.getExternalStorageDirectory() + "/path/" -->
        <external-path
            name="files_root"
            path="Android/data//"/>
        <!-- path设置为'.'时代表整个存储卡 Environment.getExternalStorageDirectory() + "/path/"   -->
        <external-path
            name="external_storage_root"
            path="."/>
    </paths>

