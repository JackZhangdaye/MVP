<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/re_solid_r12_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/toast_err"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/iv_file_cancel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="发现新版本"
            android:typeface="serif"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#111"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:id="@+id/tv_up_content_dialog"
            android:text="1.*********\n2.********"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:id="@+id/tv_dialog_down"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:text="立即更新"
            android:gravity="center"
            android:background="@drawable/re_solid_r22_red"
            android:textColor="#fff"
            />

    </LinearLayout>

</FrameLayout>