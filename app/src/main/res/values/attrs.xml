<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ItemViewGroup">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="isRightDrawable" format="boolean"/>

    </declare-styleable>


    <!--RoundImageView的要用的属性-->
    <declare-styleable name="RoundImageView">
        <attr name="round_type" format="integer"/>
        <attr name="round_topLeft" format="dimension"/>
        <attr name="round_topRight" format="dimension"/>
        <attr name="round_bottomLeft" format="dimension"/>
        <attr name="round_bottomRight" format="dimension"/>
    </declare-styleable>

    <!--热门搜索-->
    <declare-styleable name="ItemHotViewGroup">
        <attr name="paddingLeft" format="dimension"/>
        <attr name="paddingTop" format="dimension"/>
        <attr name="paddingRight" format="dimension"/>
        <attr name="paddingBottom" format="dimension"/>
        <attr name="paddingX" format="dimension"/>
        <attr name="paddingY" format="dimension"/>
    </declare-styleable>

    <!--NinthPalaceViewGroup 边距-->
    <declare-styleable name="NinthPalaceViewGroup">
        <attr name="itemgap" format="dimension"></attr>
    </declare-styleable>


</resources>